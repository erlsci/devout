[
    {devout, [
        {mcp_server_config, [
            {transport, stdio},
            {name, <<"devout-fs">>},
            {version, <<"0.1.0">>},
            {vendor, <<"erlsci">>},
            {description, <<"File system operations for Devin clone">>}
        ]},
        {allowed_operations, [
            show_cwd,
            change_cwd,
            create_file,
            delete_file,
            create_directory,
            remove_directory
        ]}
    ]},
    {lager, [
        {log_root, "logs"},
        {handlers, [
            {lager_console_backend, [
                {level, info},
                {formatter, lager_default_formatter},
                {formatter_config, [
                    "[", time, "] [", severity, "] [", pid, "] ",
                    {module, [
                        {module, ""}, 
                        {function, [":", function], ""}, 
                        {line, [":", line], ""}
                    ], ""}, 
                    " ", message, "\n"
                ]}
            ]},
            {lager_file_backend, [
                {file, "devout.log"},
                {level, debug},
                {size, 104857600},  % 100MB
                {date, "$D0"},
                {count, 5}
            ]}
        ]},
        {crash_log, "crash.log"},
        {crash_log_msg_size, 65536},
        {crash_log_size, 104857600},
        {crash_log_date, "$D0"},
        {crash_log_count, 5},
        {error_logger_redirect, true},
        {error_logger_hwm, 50}
    ]},
    {kernel, [
        {logger_level, info},
        {logger, [
            {handler, default, logger_std_h,
                #{level => info,
                  formatter => {logger_formatter, #{single_line => true}}}
            }
        ]}
    ]},
    {sasl, [
        {sasl_error_logger, false},
        {errlog_type, error}
    ]}
].